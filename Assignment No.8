#include <stdio.h>
#include <stdlib.h>

#define MAX 5

int queue[MAX];
int rear = -1, front = -1;



int main()
{
    int ch, choice, element;
    
    do {
        printf("\n1. ENQUEUE\n2. DEQUEUE\n3. DISPLAY\n4. EXIT\n");
        printf("ENTER YOUR CHOICE: ");
        scanf("%d", &ch);

        switch (ch) {
        case 1:
             enqueue();
             break;

        case 2:
            dequeue();
            break;

        case 3:
            display();
            break;

        case 4:
            exit(0);
            break;

        default:
            printf("INVALID CHOICE:\n");
        }

        printf("\nDO U WANT TO GO IN MENU AGAIN? (1/0): ");
        scanf("%d", &choice);

    } while (choice == 1);

    return 0;
}

void enqueue()
{
    int element;
   if(rear==MAX-1 && front!=MAX-1)
   {
       printf("queue is full\n");
   }
   else if(rear==MAX-1 && front==MAX-1)
   {
       front=-1;
       rear=-1;
   }
   else
   {
       rear++;
       printf("ENTER A ELEMENT:\n");
       scanf("%d",&element);
       queue[rear]=element;
   }
}
void dequeue()
{
    if (front == rear)
        printf("QUEUE IS EMPTY!\n");
    else {
        front++;
        printf("ELEMENT DELETED IS: %d\n", queue[front]);
    }
}

void display()
{
    if (front == rear)
        printf("QUEUE IS EMPTY!\n");
    else {
        printf("QUEUE ELEMENTS ARE: ");
        for (int i = front + 1; i <= rear; i++) {
            printf("%d ", queue[i]);
        }
        printf("\n");
    }
}
